<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:customfontdemo="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/mainlistitem_height"
    android:id="@+id/lin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/listselector">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="@dimen/mainlistitem_height">

            <LinearLayout
                android:layout_margin="5dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainlist_layout_top"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="6dp"
                            android:id="@+id/photo"/>

                        <ImageView
                            android:id="@+id/overlay"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="3"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="2.61">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainlist_name_height">

                            <com.probes.kidfitnesslayout.MyTextView
                                android:paddingLeft="4dp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                customfontdemo:fontName="HelveticaNeueCyr-Roman.otf"
                                android:id="@+id/name"
                                android:layout_gravity="center|left"
                                android:textColor="#FF6600"
                                android:textSize="@dimen/mainlist_name"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainlist_actlevel_height">

                            <com.probes.kidfitnesslayout.MyTextView
                                android:paddingLeft="4dp"
                                android:layout_gravity="bottom"
                                android:gravity="center|left"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:id="@+id/actlevel"
                                android:textColor="@color/rose"
                                android:textSize="@dimen/mainlist_actlevel"
                                customfontdemo:fontName="HelveticaNeueCyr-Medium.otf"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/mainlist_bar_layout_height"
                            android:layout_marginLeft="4dp"
                            android:orientation="horizontal">

                            <RelativeLayout
                                android:layout_width="@dimen/mainlist_bar_width"
                                android:layout_height="match_parent">

                                <ProgressBar
                                    android:layout_width="@dimen/mainlist_bar_width"
                                    android:layout_height="@dimen/mainlist_bar_height"
                                    android:visibility="invisible"
                                    style="@android:style/Widget.ProgressBar.Horizontal"/>

                                <ImageView
                                    android:layout_width="@dimen/mainlist_bar_width"
                                    android:layout_height="match_parent"
                                    android:layout_marginBottom="5dp"
                                    android:layout_gravity="center|bottom"
                                    android:src="@drawable/progressbarstart"/>

                            </RelativeLayout>

                            <ImageView
                                android:layout_width="18dp"
                                android:layout_height="6dp"
                                android:src="@drawable/arrowstart"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:orientation="horizontal"
                                    android:layout_marginLeft="3dp">

                                    <LinearLayout
                                        android:layout_weight="10"
                                        android:layout_width="0dp"
                                        android:layout_height="wrap_content">

                                        <RelativeLayout
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content">

                                            <ImageView
                                                android:layout_weight="5"
                                                android:layout_width="@dimen/mainlist_image_titul_width"
                                                android:layout_height="@dimen/mainlist_image_titul_height"
                                                android:layout_marginTop="3dp"
                                                android:src="@drawable/titul_rose_start"
                                                android:id="@+id/titul"/>

                                            <com.probes.kidfitnesslayout.MyTextView
                                                android:layout_width="@dimen/mainlist_image_titul_width"
                                                android:layout_height="@dimen/mainlist_image_titul_height"
                                                android:paddingLeft="2dp"
                                                android:layout_marginTop="3dp"
                                                android:text="@string/label1"
                                                android:textSize="@dimen/mainlist_titul"
                                                android:gravity="center"
                                                customfontdemo:fontName="HelveticaNeueCyr-Medium.otf"
                                                android:textColor="@color/bg"
                                                android:id="@+id/label" />

                                        </RelativeLayout>

                                    </LinearLayout>

                                    <LinearLayout
                                        android:layout_weight="1"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <View
                                            android:layout_width="0dp"
                                            android:layout_height="wrap_content"/>

                                    </LinearLayout>

                                </LinearLayout>

                            </RelativeLayout>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/mainlist_layout_bottom">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_gravity="center">

                    <ImageView
                        android:layout_marginLeft="@dimen/syncuser_leftmargin"
                        android:layout_marginRight="@dimen/syncuser_rightmargin"
                        android:id="@+id/synchr"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/running_results_sync_height"
                        android:background="@drawable/syncdata"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/running_results_sync_height"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/syncuser_leftmargin"
                        android:layout_marginRight="@dimen/syncuser_rightmargin">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/mainlist_sync_data_width"
                            android:layout_marginLeft="4dp"
                            android:src="@drawable/arrowresults"
                            android:layout_gravity="center"/>

                        <com.probes.kidfitnesslayout.MyTextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:layout_marginTop="1dp"
                            android:text="@string/sync"
                            android:textColor="@color/bg"
                            android:layout_gravity="center"
                            customfontdemo:fontName="HelveticaNeueCyr-Medium.otf"
                            android:gravity="left|center"
                            android:textSize="@dimen/mainlist_sync"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <com.probes.kidfitnesslayout.MyTextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginTop="8dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:text="@string/last"
                                    android:textColor="@android:color/white"
                                    android:gravity="center|right"
                                    android:textSize="@dimen/mainlist_last"
                                    customfontdemo:fontName="HelveticaNeueLTPro-Bd.otf"/>

                                <com.probes.kidfitnesslayout.MyTextView
                                    android:layout_marginBottom="8dp"
                                    android:layout_width="match_parent"
                                    android:layout_height="0dp"
                                    android:layout_marginRight="10dp"
                                    android:layout_weight="1"
                                    android:text="15.02.2015 06:48 PM"
                                    android:textColor="@color/bg"
                                    customfontdemo:fontName="HelveticaNeueLTPro-Bd.otf"
                                    android:gravity="center|right"
                                    android:textSize="@dimen/mainlist_last"/>

                            </LinearLayout>

                        </LinearLayout>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout><!-- From: file:/D:/AndroidWorkProjects/KidFitnessLayout/app/src/main/res/layout/user.xml -->